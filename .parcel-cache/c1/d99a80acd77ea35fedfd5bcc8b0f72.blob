* {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  /* font-size: 62.5%; */
  box-sizing: border-box;
}

body {
  font-family: "Josefin Sans", sans-serif;
  font-weight: 300;
  color: #444;
  line-height: 1.9;
  background-color: #ffffff;
}

.container {
  max-width: 100%;
}
.header {
  max-height: 30vh;
  max-width: 100wh;
}
.header img {
  width: 100%;
  height: 100%;
}
.to-do_preview {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 1px solid red;
  min-width: 50%;
  min-height: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.attribution {
  font-size: 11px;
  text-align: center;
  position: absolute;
  top: 93%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.attribution a {
  color: hsl(228, 45%, 44%);
}

@media screen and (max-width:450px) {
    .to-do_preview {
        min-width: 80%;
        min-height: 70%;
    }
}
