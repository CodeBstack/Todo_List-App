* {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  box-sizing: border-box;
}

body {
  font-family: "Josefin Sans", sans-serif;
  font-weight: 300;
  font-size: 18px;
  color: #fff;
  line-height: 1.9;
}

.container {
  max-width: 100%;
}
.header {
  max-height: 35vh;
  max-width: 100wh;
}
.header img {
  width: 100%;
  height: 100%;
}
.to-do_preview {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* border: 1px solid red; */
  min-width: 50%;
  min-height: 70%;
  display: block;
}
.preview-heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35px;
}

/* Input form */
.create-todo {
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  padding-left: 3rem;
  transition: all 0.3s;
}
.create-todo__field {
  border: none;
  background: none;
  color: red;
  width: 100%;
  font-size: 1.5rem;
  width: 30rem;
  height: 4rem;
}
.create-todo__field::placeholder {
  color: hsl(235, 19%, 35%);
  /* padding-left: 40px; */
}
.create-todo__field:focus{
    outline: none;
}

.attribution {
  font-size: 11px;
  text-align: center;
  position: absolute;
  top: 93%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.attribution a {
  color: hsl(228, 45%, 44%);
}

@media screen and (max-width: 450px) {
  .to-do_preview {
    max-width: 80%;
    max-height: 80%;
  }
}

