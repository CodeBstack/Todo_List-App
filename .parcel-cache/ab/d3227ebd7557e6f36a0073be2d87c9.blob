* {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  box-sizing: border-box;
}

body {
  font-family: "Josefin Sans", sans-serif;
  font-weight: 300;
  font-size: 18px;
  color: #fff;
  line-height: 1.9;
}

.container {
  max-width: 100%;
}
.header {
  max-height: 35vh;
  max-width: 100wh;
}
.header img {
  width: 100%;
  height: 100%;
}
.to-do_preview {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* border: 1px solid red; */
  min-width: 50%;
  min-height: 70%;
  display: block;
}
.preview-heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35px;
  /* margin-bottom: 15px; */
}

