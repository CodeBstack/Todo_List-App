* {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  box-sizing: border-box;
}

body {
  font-family: "Josefin Sans", sans-serif;
  font-size: 15px;
  font-weight: 800;
  color: #fff;
  line-height: 1.9;
  max-height: 100vh;
}

.container {
  max-width: 100%;
  max-height: 100vh;
  position: relative;
}
.header {
  max-height: 35vh;
  max-width: 100wh;
}
.header img {
  width: 100%;
  height: 100%;
}
.to-do_preview {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  min-width: 50%;
  min-height: 70%;
  display: block;
}
.preview-heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 25px;
  font-weight: 500;
  margin-bottom: 15px;
}

/* Input form */
.create-todo {
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  padding-left: 3rem;
  transition: all 0.3s;
  /* font-weight: 800; */
}

.create-todo__field {
  border: none;
  background: none;
  color: hsl(235, 19%, 35%);
  font-weight: 400;
  font-size: 18px;
  width: 30rem;
  height: 3rem;
}
.create-todo__field::placeholder {
  color: hsl(234, 24%, 76%);
  font-weight: 400;
}
.create-todo__field:focus {
  outline: none;
}

/* LISTS */
.box {
  box-shadow: 3px 3px 8px 8px rgba(0, 0, 0, 0.2);
  border-radius: 10px;
}

ul {
  color: hsl(235, 19%, 35%);
  margin-top: 30px;
  background-color: #ffffff;
  list-style-type: none;
}

.todo-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 7px 20px;
  border-bottom: 1px solid hsl(233, 14%, 78%);
}
.checks {
  border: none;
  background: none;
}

.tick {
  width: 20px;
  height: 20px;
  border: 1.5px solid #333;
  border-radius: 50%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.tick::before {
  content: "✓";
  font-size: 15px;
  display: none;
}

.cross {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  /* filter: invert(1); */
  background-color: red;
}
.delete {
  width: 20px;
  height: 20px;
  border: 1.5px solid #333;
  border-radius: 50%;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}
.delete::before {
  content: "×";
  font-size: 25px;
  color: #fff;
  /* display: flex;
  align-items: center;
  justify-content: center; */
}


.list-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0px;
  padding: 8px 20px;
  color: hsl(236, 9%, 61%);
}

.footer-nav {
  display: flex;
  flex-basis: 35%;
  justify-content: space-between;
}

.footer-nav a {
  text-decoration: none;
  color: inherit;
}

.footer-nav-1:hover {
  cursor: pointer;
  color: hsl(220, 98%, 61%);
}
.footer-nav-1:active {
  color: hsl(220, 98%, 61%);
}

.clear {
  color: inherit;
  text-decoration: none;
}

.completed {
  color: hsl(236, 9%, 61%);
  text-decoration: line-through;
}

.attribution {
  color: #444;
  font-size: 11px;
  text-align: center;
  position: absolute;
  top: 98%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.attribution a {
  color: hsl(228, 45%, 44%);
}

@media screen and (max-width: 450px) {
  .to-do_preview {
    max-width: 80%;
    max-height: 80%;
  }
}

