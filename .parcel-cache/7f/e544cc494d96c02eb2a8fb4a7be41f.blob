* {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

html {
  box-sizing: border-box;
}

body {
  font-family: "Josefin Sans", sans-serif;
  /* font-weight: 300; */
  font-size: 18px;
  color: #fff;
  line-height: 1.9;
}

.container {
  max-width: 100%;
}
.header {
  max-height: 35vh;
  max-width: 100wh;
}
.header img {
  width: 100%;
  height: 100%;
}
.to-do_preview {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* border: 1px solid red; */
  min-width: 50%;
  min-height: 70%;
  display: block;
  box-shadow: 0 0.7rem 3rem rgba(0,0,0, 0.4);

}
.preview-heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35px;
  font-weight: 500;
  margin-bottom: 15px;
}

/* Input form */
.create-todo {
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  align-items: center;
  padding-left: 3rem;
  transition: all 0.3s;
  /* font-weight: 800; */
}

.create-todo__field {
  border: none;
  background: none;
  color: hsl(235, 19%, 35%);
  font-weight: 600;
  font-size: 1.5rem;
  width: 30rem;
  height: 3.5rem;
}
.create-todo__field::placeholder {
  color: hsl(235, 19%, 35%);
  font-weight: 500;
}
.create-todo__field:focus {
  outline: none;
}

/* LISTS */
ul{
    color: red;
}
.todo-list{
    margin-top: 20px;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #fff;
}
.todo-list img{
    width: 20px;
    height: 20px;
}

















.attribution {
  font-size: 11px;
  text-align: center;
  position: absolute;
  top: 93%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.attribution a {
  color: hsl(228, 45%, 44%);
}

@media screen and (max-width: 450px) {
  .to-do_preview {
    max-width: 80%;
    max-height: 80%;
  }
}

